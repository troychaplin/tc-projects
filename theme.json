{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
        "appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "charcoal-dark",
					"color": "#090909",
					"name": "Charcoal Dark"
				},
				{
					"slug": "charcoal",
					"color": "#262626",
					"name": "Charcoal"
				},
				{
					"slug": "emerald",
					"color": "#10b981",
					"name": "Emerald"
				},
				{
					"slug": "teal",
					"color": "#14b8a6",
					"name": "Teal"
				},
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "White"
				},
				{
					"slug": "gray-400",
					"color": "#9ca3af",
					"name": "Gray 400"
				},
				{
					"slug": "gray-600",
					"color": "#4b5563",
					"name": "Gray 600"
				},
				{
					"slug": "white-10",
					"color": "rgba(255, 255, 255, 0.1)",
					"name": "White 10%"
				},
				{
					"slug": "black-70",
					"color": "rgba(10, 10, 10, 0.7)",
					"name": "White 10%"
				}
			]
		},
		"typography": {
			"defaultFontSizes": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "'Roboto Flex', sans-serif",
					"slug": "body",
					"name": "Body (Roboto Flex)",
					"fontFace": [
						{
							"fontFamily": "Roboto Flex",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": ["https://fonts.googleapis.com/css2?family=Roboto+Flex:wght@100..900&display=swap"]
						}
					]
				},
				{
					"fontFamily": "'Space Grotesk', sans-serif",
					"slug": "heading",
					"name": "Heading (Space Grotesk)",
					"fontFace": [
						{
							"fontFamily": "Space Grotesk",
							"fontStyle": "normal",
							"fontWeight": "300 700",
							"src": ["https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "x-small",
					"size": "0.875rem",
					"name": "X-Small",
					"fluid": {
						"min": "0.75rem",
						"max": "0.875rem"
					}
				},
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					}
				},
				{
					"slug": "medium",
					"size": "1.125rem",
					"name": "Medium",
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					}
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large",
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					}
				},
				{
					"slug": "x-large",
					"size": "1.5rem",
					"name": "X-Large",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "2x-large",
					"size": "1.875rem",
					"name": "2X-Large",
					"fluid": {
						"min": "1.5rem",
						"max": "1.875rem"
					}
				},
				{
					"slug": "3x-large",
					"size": "2.25rem",
					"name": "3X-Large",
					"fluid": {
						"min": "1.875rem",
						"max": "2.25rem"
					}
				},
				{
					"slug": "4x-large",
					"size": "3rem",
					"name": "4X-Large",
					"fluid": {
						"min": "2.25rem",
						"max": "3rem"
					}
				},
				{
					"slug": "5x-large",
					"size": "3.75rem",
					"name": "5X Large",
					"fluid": {
						"min": "3rem",
						"max": "3.75rem"
					}
				},
				{
					"slug": "6xl-large",
					"size": "4.5rem",
					"name": "6X Large",
					"fluid": {
						"min": "3rem",
						"max": "6rem"
					}
				}
			],
			"writingMode": true
		},
		"spacing": {
			"units": ["px", "rem", "vh", "vw", "%"],
			"spacingSizes": [
				{
					"slug": "xs",
					"size": "0.5rem",
					"name": "Extra Small",
					"fluid": {
						"min": "0.375rem",
						"max": "0.5rem"
					}
				},
				{
					"slug": "sm",
					"size": "1rem",
					"name": "Small",
					"fluid": {
						"min": "0.75rem",
						"max": "1rem"
					}
				},
				{
					"slug": "md",
					"size": "1.5rem",
					"name": "Medium",
					"fluid": {
						"min": "1.125rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "lg",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				},
				{
					"slug": "xl",
					"size": "3rem",
					"name": "Extra Large",
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					}
				},
				{
					"slug": "2xl",
					"size": "4rem",
					"name": "2X Large",
					"fluid": {
						"min": "3rem",
						"max": "4rem"
					}
				},
				{
					"slug": "3xl",
					"size": "6rem",
					"name": "3X Large",
					"fluid": {
						"min": "4rem",
						"max": "6rem"
					}
				}
			]
		},
		"layout": {
			"contentSize": "672px",
			"wideSize": "976px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--charcoal-dark)",
			"text": "var(--wp--preset--color--white)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontWeight": "300",
			"lineHeight": "1.6"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--6xl)",
					"fontWeight": "400",
					"lineHeight": "1.1"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--5xl)",
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--4xl)",
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--3xl)",
					"fontWeight": "400",
					"lineHeight": "1.3"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--2xl)",
					"fontWeight": "400",
					"lineHeight": "1.3"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--xl)",
					"fontWeight": "400",
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--emerald)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--teal)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--emerald)",
					"text": "var(--wp--preset--color--white)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--teal)"
					}
				}
			}
		}
	}
}

